@model SpotAPIFrontEnd.Models.CreatePlaylistRequest

<h4>Spot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="spotParams">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Playlist Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Desired Length (minutes) <= 600</label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Select up to 5 genres and/or artists</label>
                <select asp-for="Genres" asp-items=ViewBag.genres class="form-control" ></select>
                <span asp-validation-for="Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Enter artist(s) comma separated</label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Desired BPM (tempo)</label>
                <input asp-for="Tempo" class="form-control"/>
                <span asp-validation-for="Tempo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">How Dancey?</label>
                <select asp-for="Dance" asp-items=ViewBag.dance class="form-control"></select>
                <span asp-validation-for="Dance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">How Energic?</label>
                <select asp-for="Energy" asp-items=ViewBag.energy class="form-control"></select>
                <span asp-validation-for="Energy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">How Happy?</label>
                <select asp-for="Valence" asp-items=ViewBag.valence class="form-control"></select>
                <span asp-validation-for="Valence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span id="getPlaylist" type="submit" onclick="PostPlaylist()" value="Create" class="btn btn-primary">Create Playlist</span>
            </div>
        </form>
    </div>
</div>
