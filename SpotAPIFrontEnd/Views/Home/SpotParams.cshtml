@model SpotAPIFrontEnd.Models.CreatePlaylistRequest

<h4>Spot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="spotParams">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Length" class="control-label"></label>
                <input asp-for="Length" class="form-control" />
                <span asp-validation-for="Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genres" class="control-label"></label>
                <select asp-for="Genres" asp-items=ViewBag.genres class="form-control" ></select>
                <span asp-validation-for="Genres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist" class="control-label"></label>
                <input asp-for="Artist" class="form-control" />
                <span asp-validation-for="Artist" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tempo" class="control-label"></label>
                <input asp-for="Tempo" class="form-control" />
                <span asp-validation-for="Tempo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dance" class="control-label"></label>
                <input asp-for="Dance" class="form-control" />
                <span asp-validation-for="Dance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Energy" class="control-label"></label>
                <input asp-for="Energy" class="form-control" />
                <span asp-validation-for="Energy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instrumental" class="control-label"></label>
                <input asp-for="Instrumental" class="form-control" />
                <span asp-validation-for="Instrumental" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span id="getPlaylist" type="submit" onclick="PostPlaylist()" value="Create" class="btn btn-primary"></span>
            </div>
        </form>
    </div>
</div>
