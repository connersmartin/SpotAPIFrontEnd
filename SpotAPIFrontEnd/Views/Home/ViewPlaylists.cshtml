@model IEnumerable<SpotAPIFrontEnd.Models.PlaylistResponse>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!(Model == null))
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>                  
                    <td>
                        <a href="#" onclick=getTracks('@item.Id')>Get Tracks</a> | <a href="#" onclick=deletePlaylist('@item.Id')>Delete</a> | <a href="#" onclick=newPlaylist('@item.Id')>Create a new playlist like this one</a> |  <a href="#" onclick=copyPlaylist('@item.Id')>Copy this playlist</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
